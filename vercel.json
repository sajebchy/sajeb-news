{
  "framework": "laravel",
  "env": {
    "S_APP_NAME": "Sajeb NEWS",
    "S_APP_ENV": "production",
    "S_APP_KEY": "@APP_KEY",
    "S_APP_DEBUG": "false",
    "S_LOG_CHANNEL": "stack",
    "S_DB_CONNECTION": "mysql",
    "S_DB_HOST": "@DB_HOST",
    "S_DB_PORT": "3306",
    "S_DB_DATABASE": "@DB_DATABASE",
    "S_DB_USERNAME": "@DB_USERNAME",
    "S_DB_PASSWORD": "@DB_PASSWORD",
    "S_CACHE_DRIVER": "redis",
    "S_SESSION_DRIVER": "cookie",
    "S_QUEUE_CONNECTION": "database"
  },
  "buildCommand": "composer install --optimize-autoloader --no-dev && npm install && npm run build && php artisan migrate --force",
  "outputDirectory": "public",
  "regions": [
    "iad1"
  ],
  "functions": {
    "api/index.php": {
      "runtime": "php-8.2",
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.php"
    }
  ]
}
